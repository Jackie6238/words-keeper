<%- include('./partials/header.ejs') -%>

<p>Enter a word and its definition to add it to your collection</p>
<form class="" action="/words/<%= wordID %>?_method=PATCH" method="post">
  <div class="form-group mb-3">
    <label>Spelling</label>
    <input
      class="form-control"
      type="text"
      name="spelling"
      value="<%= spelling %>"
    />
  </div>
  <div class="form-group mb-3">
    <label>Definition</label>
    <textarea class="form-control" name="definition" rows="5" cols="30">
<%= definition %>
    </textarea>
  </div>
  <button class="btn btn-outline-dark" type="submit" name="button">OK</button>
</form>

<%- include('./partials/footer.ejs') -%>